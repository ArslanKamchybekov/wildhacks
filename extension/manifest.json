{
  "manifest_version": 3,
  "name": "GoalKeeper Pet",
  "version": "1.0.0",
  "description": "A pet that monitors your browsing habits and loses health when you visit unproductive sites",
  "permissions": [
    "tabs",
    "storage",
    "activeTab",
    "<all_urls>"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "content_scripts": [
    {
      "matches": ["http://localhost:3000/*"],
      "js": ["src/content-script.js", "src/content.js"],
      "css": ["src/content.css"]
    }
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "16": "assets/pet.png",
      "48": "assets/pet.png",
      "128": "assets/pet.png"
    }
  },
  "icons": {
    "16": "assets/pet.png",
    "48": "assets/pet.png",
    "128": "assets/pet.png"
  }
}
